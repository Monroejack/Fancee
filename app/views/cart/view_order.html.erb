<h1 id='cart_heading'>My Cart</h1>

  <div class="container">
    <table class='table table-hover'>
      <thead class='thead-dark'>
        <tr>
          <th>Name</th>
          <th>Product Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Actions</th>
        </tr>
      </thead>
  <tbody>
<% @line_items.each do |line_item| %>
  <tr>
  <td>
    <%= line_item.product.name %>
  </td>
  <td>
    <%= number_to_currency line_item.product.price %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
    <td>
    <%= number_to_currency line_item.line_item_total %>
    </td>
    <td>
      <%= form_with url: update_item_path(id: line_item), method: :patch do |f| %>
      <%= f.number_field :quantity, style: 'width: 35px;' %>
      <%= f.submit 'Update', id:'cart_button' %>
      <% end %>
      <%= link_to remove_item_path(id: line_item), method: :delete do %>
      <span class='glyphicon glyphicon-remove-circle'></span>
      <% end %>
    </td>
    </tr>

  <% end %>

</table>


<div>
  <%= link_to "CHECKOUT", checkout_path, class: "btn", id: 'checkout_button' %>
</div>
