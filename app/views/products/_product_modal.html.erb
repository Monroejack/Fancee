<div class="modal fade" id="myModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
      </div>
      <div class="modal-body">
        <% if !product.image.url.nil? %>
        <p><%= image_tag product.image.url, class: "storefront-pics img-responsive", id:"Product_Picture" %></p>
        <% end %>
        <h3><%= link_to product.name, product %></h3>
        <p>
          <b>Description:</b> <%= product.description %>
        </p>
        <p><%= number_to_currency product.price %></p>
        <p>made by <%= product.brand %></p>
      </div>
      <div class="modal-footer">
        <%= form_tag add_to_cart_path do %>
          <%= hidden_field_tag :product_id, product.id %>
          <%= number_field_tag :quantity, nil, placeholder: 'how many?' %>
          <%= submit_tag "Add to Cart", class: 'btn', id:'modal_button_submit' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
